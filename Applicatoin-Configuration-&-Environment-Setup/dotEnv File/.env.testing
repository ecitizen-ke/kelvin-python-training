# Testing environment settings

# Database settings
DATABASE_URI=sqlite:///test_database.db
DATABASE_USERNAME=test_user
DATABASE_PASSWORD=test_password

# Debug mode
DEBUG=True

# Logging settings
LOG_FILE=test_app.log
LOG_LEVEL=DEBUG

# Secret key for sessions
SECRET_KEY=test_secret_key

# Email settings
MAIL_SERVER=smtp.testmail.com
MAIL_PORT=587
MAIL_USERNAME=test_email_username
MAIL_PASSWORD=test_email_password

# API keys
GOOGLE_API_KEY=test_google_api_key

# Pagination settings
ITEMS_PER_PAGE=5

# Application title
APP_TITLE=My Flask App - Testing

# File upload settings
UPLOAD_FOLDER=/tmp/test_uploads

# Cache settings
CACHE_TYPE=SimpleCache
CACHE_REDIS_URL=

# Security settings
SECURITY_PASSWORD_SALT=test_password_salt
SECURITY_PASSWORD_HASH=bcrypt

# CORS settings
CORS_ALLOWED_ORIGINS=http://test.example.com,https://test.example.com

# Other settings
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16 MB
