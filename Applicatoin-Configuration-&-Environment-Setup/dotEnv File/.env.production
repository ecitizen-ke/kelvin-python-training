# Production environment settings

# Database settings
DATABASE_URI=postgresql://prod_user:prod_password@prod_db_host/prod_db_name
DATABASE_USERNAME=prod_user
DATABASE_PASSWORD=prod_password

# Debug mode
DEBUG=False

# Logging settings
LOG_FILE=/var/log/myapp/prod_app.log
LOG_LEVEL=INFO

# Secret key for sessions
SECRET_KEY=prod_secret_key

# Email settings
MAIL_SERVER=smtp.prodmail.com
MAIL_PORT=587
MAIL_USERNAME=prod_email_username
MAIL_PASSWORD=prod_email_password

# API keys
GOOGLE_API_KEY=prod_google_api_key

# Pagination settings
ITEMS_PER_PAGE=20

# Application title
APP_TITLE=My Flask App - Production

# File upload settings
UPLOAD_FOLDER=/var/www/myapp/uploads

# Cache settings
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://prod_redis_host:6379/0

# Security settings
SECURITY_PASSWORD_SALT=prod_password_salt
SECURITY_PASSWORD_HASH=bcrypt

# CORS settings
CORS_ALLOWED_ORIGINS=http://prod.example.com,https://prod.example.com

# Other settings
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16 MB
