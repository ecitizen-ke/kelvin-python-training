# Development environment settings

# Database settings
DATABASE_URI=sqlite:///dev_database.db
DATABASE_USERNAME=dev_user
DATABASE_PASSWORD=dev_password

# Debug mode
DEBUG=True

# Logging settings
LOG_FILE=dev_app.log
LOG_LEVEL=DEBUG

# Secret key for sessions
SECRET_KEY=dev_secret_key

# Email settings
MAIL_SERVER=smtp.devmail.com
MAIL_PORT=587
MAIL_USERNAME=dev_email_username
MAIL_PASSWORD=dev_email_password

# API keys
GOOGLE_API_KEY=dev_google_api_key

# Pagination settings
ITEMS_PER_PAGE=10

# Application title
APP_TITLE=My Flask App - Development

# File upload settings
UPLOAD_FOLDER=/tmp/dev_uploads

# Cache settings
CACHE_TYPE=SimpleCache
CACHE_REDIS_URL=

# Security settings
SECURITY_PASSWORD_SALT=dev_password_salt
SECURITY_PASSWORD_HASH=bcrypt

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://dev.example.com

# Other settings
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16 MB
